<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
	<class name="framgiavn.project02.web.model.Activity" table="Activities"
		dynamic-insert="true" dynamic-update="true">
		<id name="id" type="java.lang.Integer">
			<column name="id" length="10" />
			<generator class="increment" />
		</id>
		
		<many-to-one name="user"
			class="framgiavn.project02.web.model.User" lazy="false" fetch="join"
			insert="false" update="false">
			<column name="userId" not-null="true" />
		</many-to-one>

		<property name="userId" type="java.lang.Integer">
			<column name="userId" length="10" />
		</property>
		
		<property name="targetId" type="java.lang.Integer">
			<column name="targetId" length="10" />
		</property>
		
		<property name="actionType" type="java.lang.String">
			<column name="actionType" length="45" />
		</property>
	</class>
	<query name="Activity.selectAllActivites">
		Select activity
		From Activity activity
		Where activity.userId = :userId
	</query>
	<query name="Activity.findActivity">
		Select activity
		From Activity activity
		Where activity.userId = :userId
		and activity.targetId = :targetId
		and activity.actionType = :actionTypeId
	</query>
</hibernate-mapping>