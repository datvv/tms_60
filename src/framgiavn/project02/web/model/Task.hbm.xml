<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
	<class name="framgiavn.project02.web.model.Task" table="Tasks"
		dynamic-insert="true" dynamic-update="true">
		<id name="id" type="java.lang.Integer">
			<column name="id" length="10" />
			<generator class="increment" />
		</id>
		
		<many-to-one name="subject"
			class="framgiavn.project02.web.model.Subject" lazy="false" fetch="join"
			insert="false" update="false">
			<column name="subjectId" not-null="true" />
		</many-to-one>

		<property name="name" type="java.lang.String">
			<column name="name" length="45" />
		</property>

		<property name="startDate" type="java.util.Date">
			<column name="startDate" length="45" />
		</property>

		<property name="endDate" type="java.util.Date">
			<column name="endDate" length="45" />
		</property>

		<property name="subjectId" type="java.lang.Integer">
			<column name="subjectId" length="10" />
		</property>
		
		<set name="userTasks" cascade="all-delete-orphan" table="User_Task" inverse="true"
			lazy="false" fetch="join">
			<key>
				<column name="taskId" not-null="true" />
			</key>
			<one-to-many class="framgiavn.project02.web.model.UserTask" />
		</set>
		
	</class>
	<query name="Task.SelectTaskSubjectId">
		select task
		from Task task
		where task.subjectId = :subjectId
	</query>
	
</hibernate-mapping>