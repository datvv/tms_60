<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
	<class name="framgiavn.project02.web.model.CourseSubject" table="Course_Subject"
		dynamic-insert="true" dynamic-update="true">
		<id name="id" type="java.lang.Integer">
			<column name="id" length="10" />
			<generator class="increment" />
		</id>
		
		<many-to-one name="subject"
			class="framgiavn.project02.web.model.Subject" lazy="false" fetch="join"
			insert="false" update="false">
			<column name="subjectId" not-null="true" />
		</many-to-one>
		
		<many-to-one name="course"
			class="framgiavn.project02.web.model.Course" lazy="false" fetch="join"
			insert="false" update="false">
			<column name="courseId" not-null="true" />
		</many-to-one>
		
		<property name="courseId" type="java.lang.Integer">
			<column name="courseId" length="10" />
		</property>	
		
		<property name="subjectId" type="java.lang.Integer">
			<column name="subjectId" length="10" />
		</property>

		<property name="status" type="java.lang.String">
			<column name="status" length="45" />
		</property>
		
		<set name="userSubjects" cascade="all-delete-orphan" table="User_Subject" inverse="true"
			lazy="false" fetch="join">
			<key>
				<column name="course_subject_id" not-null="true" />
			</key>
			<one-to-many class="framgiavn.project02.web.model.UserSubject" />
		</set>
	</class>
	<query name="CourseSubject.getCourseSubjectByCourseIdAndSubjectId">
		select courseSubject
		from CourseSubject courseSubject
		where courseSubject.courseId = :courseId
		And courseSubject.subjectId = :subjectId
	</query>
</hibernate-mapping>