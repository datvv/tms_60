<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
	<class name="framgiavn.project02.web.model.Course" table="Courses">
		<id name="id" type="java.lang.Integer">
			<column name="id" />
			<generator class="increment" />
		</id>
		<property name="name" type="java.lang.String">
			<column name="name" />
		</property>
		<property name="instruction" type="java.lang.String">
			<column name="instruction" />
		</property>
		<property name="status" type="java.lang.String">
			<column name="status" />
		</property>
		<property name="startDate" type="java.util.Date">
			<column name="startDate" />
		</property>
		<property name="endDate" type="java.util.Date">
			<column name="endDate" />
		</property>
		<set name="courseSubjects" cascade="all" table="Course_Subject" inverse="true"
			lazy="false" fetch="join">
			<key>
				<column name="courseId" not-null="true" />
			</key>
			<one-to-many class="framgiavn.project02.web.model.CourseSubject" />
		</set>
		<set name="userCourses" cascade="all" table="User_Course" inverse="true"
			lazy="false" fetch="join">
			<key>
				<column name="courseId" not-null="true" />
			</key>
			<one-to-many class="framgiavn.project02.web.model.UserCourse" />
		</set>
		
	</class>
	<query name="Course.SelectSubjectList">
		select subject
		from Subject subject
		where subject.id in
		(
		select cs.subjectId
		from CourseSubject cs
		where cs.courseId = :courseId
		)
	</query>
	<query name="Course.SelectCourseByCourseId">
		select course
		from Course course
		where course.id =
		:courseId
	</query>
</hibernate-mapping>
