<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
"-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
"http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>
	<!-- Configure NameSpace for action web -->
	<package name="User" namespace="/user" extends="default-web">
		<action name="findByUserId*" class="springUserAction" method="findByUserId">
			<param name="user.id">{1}</param>
			<result name="success">User.Info</result>
			<result name="input">User.Info</result>
			<result name="error">User.Info</result>
		</action>
	</package>

	<package name="default" namespace="/" extends="struts-default">
		<result-types>
			<result-type name="tiles"
				class="org.apache.struts2.views.tiles.TilesResult" default="true" />
		</result-types>
		<action name="login">
			<result>USER_LOGIN</result>
		</action>
		<action name="userAccess" class="springSupervisorAction" method="execute">
            <result name="success">USER_LOGIN_SUCCESS</result>
        </action>
	</package>
	
	<package name="supervisor" namespace="/supervisor" extends="default-web-supervisor">
		<result-types>
			<result-type name="tiles"
				class="org.apache.struts2.views.tiles.TilesResult" default="true" />
		</result-types>
		<action name="supervisorAccess" class="springSupervisorAction" method="execute">
            <result name="success">SUPERVISOR_LOGIN_SUCCESS</result>
        </action>
		<action name="supervisorLogin">
            <result>USER_LOGIN</result>  
        </action>
	</package>
</struts>
