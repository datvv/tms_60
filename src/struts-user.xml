<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
"-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
"http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>
	<!-- Configure NameSpace for action web -->
	<package name="User" namespace="/user" extends="default-web">
		<action name="findByUserId*" class="springUserAction" method="findByUserId">
			<param name="user.id">{1}</param>
			<result name="success">User.Info</result>
			<result name="input">User.Info</result>
			<result name="error">User.Info</result>
		</action>
	</package>

	<package name="default" namespace="/" extends="struts-default">
		<result-types>
			<result-type name="tiles"
				class="org.apache.struts2.views.tiles.TilesResult" default="true" />
		</result-types>
	  	<action name="login">
			<result>USER_LOGIN</result>
		</action>
		<action name="userAccess" class="springSupervisorAction"
			method="execute">
			<result name="success">USER_LOGIN_SUCCESS</result>
		</action>
		<action name="showSubjecDetail" class="springSubjectScreenAction"
			method="showSubjecDetail">
			<result name="success">SUBJECT_DETAIL</result>
		</action>
		<action name="editTaskStatus" class="springSubjectScreenAction"
			method="editTaskStatus">
			<result name="success">SUBJECT_DETAIL</result>
		</action>
		<action name="signUp" class="springUserSignUpAction" method="signUp">
			<result name="input">SIGNUP</result>
			<result name="success">SIGNUP_SUCCESS</result>
			<result name="error">SIGNUP</result>
		</action>
		<action name="showCourse" class="springCourseScreenAction" method="showCourse">
			<result name="success">COURSE_DETAIL</result>
		</action>
	</package>

	<package name="supervisor" namespace="/supervisor" extends="default-web-supervisor">
		<result-types>
			<result-type name="tiles"
				class="org.apache.struts2.views.tiles.TilesResult" default="true" />
		</result-types>
		<action name="supervisorAccess" class="springSupervisorAction"
			method="execute">
			<result name="success">SUPERVISOR_COURSES</result>
		</action>
		<action name="supervisorLogin">
			<result>USER_LOGIN</result>
		</action>
		<action name="showCourseDetail" class="springManageCourseAction"
			method="showCourseDetail">
			<result name="success">SUPERVISOR_COURSE_DETAIL</result>
		</action>
		<action name="addCourse" class="springManageCourseAction"
			method="addCourse">
			<result name="success">SUPERVISOR_COURSE_ADDING</result>
		</action>
		<action name="addAndSaveCourseAction" class="springManageCourseAction"
			method="addAndSaveCourse">
			<result name="success">SUPERVISOR_COURSES</result>
		</action>
		<action name="deleteCourse" class="springManageCourseAction"
			method="deleteCourse">
			<result name="success">SUPERVISOR_COURSES</result>
		</action>
		<action name="showSubjectDetail" class="springManageSubjectAction"
			method="showSubjectDetail">
			<result name="success">SUPERVISOR_SUBJECT_DETAIL</result>
		</action>
		<action name="addTraineeToCourse" class="springManageCourseAction"
			method="addTraineeToCourse">
			<result name="success">SUPERVISOR_COURSES</result>
		</action>
	</package>
</struts>
