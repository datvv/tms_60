<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans 
	http://www.springframework.org/schema/beans/spring-beans-3.1.xsd">

	<!-- ================== USER MODULE ================== -->
	<bean id="springUserAction" class="framgiavn.project02.web.action.UserAction">
		<property name="userBusiness" ref="UserBusiness" />
	</bean>
	<bean id="springSupervisorAction" class="framgiavn.project02.web.action.SupervisorAction">
    </bean>
    <bean id="springSubjectScreenAction" class="framgiavn.project02.web.action.SubjectScreenAction">
    	<property name="taskBusiness" ref="TaskBusiness" />
    	<property name="userBusiness" ref="UserBusiness" />
    	<property name="subjectBusiness" ref="SubjectBusiness" />
    	<property name="userSubjectBusiness" ref="UserSubjectBusiness" />
    	<property name="userTaskBusiness" ref="UserTaskBusiness" />
    	<property name="activityBusiness" ref="ActivityBusiness" />
    </bean>

	<bean id="springUserSignUpAction" class="framgiavn.project02.web.action.UserSignUpAction">
		<property name="userBusiness" ref="UserBusiness" />
	</bean>

</beans>